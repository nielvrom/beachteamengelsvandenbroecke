<!DOCTYPE html>
<html lang="nl">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}thetitle{% endblock %} | Beachteam Engels - Vandenbroecke </title>
    {% block stylesheets %}
        <link href="{{ asset('css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />
        <link href="{{ asset('css/bootstrap-theme.min.css') }}" type="text/css" rel="stylesheet" />
        <link href="{{ asset('css/page.css') }}" type="text/css" rel="stylesheet" />
    {% endblock %}
    <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" />
</head>
<body>
<div class="container">
    <div id="header">
        <h1 class="text-center">Beachteam Engels - Vandenbroecke</h1>
    </div>
    <div id="navigation">
        <ul class="nav nav-tabs nav-justified">
            <li class="{% if app.request.attributes.get('_route') starts with 'BeachteamBundle_article' %}active{% endif %}"><a href="{{ path('BeachteamBundle_articlepage') }}">Nieuws</a></li>
            <li class="{% if app.request.attributes.get('_route') starts with 'BeachteamBundle_bio' %}active{% endif %}"><a href="{{ path('BeachteamBundle_biopage') }}">Bio</a></li>
            <li class="{% if app.request.attributes.get('_route') starts with 'BeachteamBundle_tournaments' %}active{% endif %}"><a href="{{ path('BeachteamBundle_tournamentspage') }}">Tornooien</a></li>
            <li class="{% if app.request.attributes.get('_route') starts with 'BeachteamBundle_media' %}active{% endif %}"><a href="{{ path('BeachteamBundle_mediapage') }}">Foto's</a></li>
            <li class="{% if app.request.attributes.get('_route') starts with 'BeachteamBundle_sponsors' %}active{% endif %}"><a href="{{ path('BeachteamBundle_sponsorspage') }}">Sponsors</a></li>
            <li class="{% if app.request.attributes.get('_route') starts with 'BeachteamBundle_contact' %}active{% endif %}"><a href="{{ path('BeachteamBundle_contactpage') }}">Contact</a></li>
        </ul>
    </div>
    <div class="content-wrapper">
        {% block body %}
        {% endblock %}
    </div>
</div>

{% block javascripts %}
    <script src="{{ asset('js/jquery-1.10.2.min.js') }}"></script>
    <script src="{{ asset('js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('js/jquery.ui.widget.js') }}"></script>
    <script src="{{ asset('js/jquery.iframe-transport.js') }}"></script>
    <script src="{{ asset('js/jquery.fileupload.js') }}"></script>
    <script src="{{ asset('js/page.js') }}"></script>
{% endblock %}
</body>
</html>
