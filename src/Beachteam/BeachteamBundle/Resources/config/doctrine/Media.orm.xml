<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Beachteam\BeachteamBundle\Entity\Media" table="media">
    <indexes>
      <index name="fk_media_item1_idx" columns="item_id"/>
    </indexes>
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="url" type="string" column="url" length="255" nullable="false"/>
    <field name="type" type="string" column="type" length="3" nullable="false"/>
    <field name="mimetype" type="string" column="mimetype" length="255" nullable="false"/>
    <field name="isexternal" type="boolean" column="isexternal" nullable="true"/>
    <many-to-one field="item" target-entity="Item">
      <join-columns>
        <join-column name="item_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>
  </entity>
</doctrine-mapping>
