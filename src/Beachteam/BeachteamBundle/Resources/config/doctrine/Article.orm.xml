<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Beachteam\BeachteamBundle\Entity\Article" table="article">
    <id name="item" association-key="true"/>
    <field name="body" type="text" column="body" nullable="false"/>
    <one-to-one field="item" target-entity="Item">
      <join-columns>
        <join-column name="item_id" referenced-column-name="id"/>
      </join-columns>
    </one-to-one>
  </entity>
</doctrine-mapping>
